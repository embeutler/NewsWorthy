</nav>

<br>

<div class="container">

    <table>
        <tbody>

            {{#each articles}}
            <div class=row>

                <div class="col s8">
                    <a href="{{this.link}}" class="collection-item tooltipped" target="_blank" data-position="bottom" data-tooltip="Click the link to view the full news article!">{{this.title}}</a>
                </div>
                <div class="col s4">
                    <button class="noteButton waves-effect waves-light btn tooltipped" id="{{this._id}}" data-position="bottom" data-tooltip="Add/view your notes"><i class="material-icons right">speaker_notes</i> Notes</button>
                </div>

            </div>
            {{/each}}

        </tbody>
    </table>

</div>
<div id="noteModal" class="modal modal-fixed-footer">

    <div class="modal-content">
        <h4>Notes</h4>
        <ul class="messages collection"></ul>
        <form name="noteForm" id="noteForm">
            <input required placeholder="Enter a note here" type="text" name="noteText" id="noteText">
            <button class="waves-effect waves-light btn" type="submit" id="noteButton">
             <i class="material-icons right">note_add</i> Post a note
            </button>
    </div>

    <div class="modal-footer">
        <a href="/" class="modal-action modal-close waves-effect waves-light btn-flat">Close</a>
        </form>
    </div>

</div>

